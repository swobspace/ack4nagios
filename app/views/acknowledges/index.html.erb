<h1><%= t('controller.acknowledges') %></h1>

<%= form_tag(
      url_for(controller: :acknowledges, action: :create),
      method: :post, role: 'form'
    ) do %>

 <div class="form-group">
 <table id="dataTable" class="table table-bordered table-striped dataTable">
  <thead>
    <tr>
      <th></th>
      <th><%= t('attributes.host_name') %></th>
      <th><%= t('attributes.service_description') %></th>
      <th><%= t('attributes.state') %></th>
      <th><%= t('attributes.plugin_output') %></th>
      <th>Svc</th>
    </tr>
  </thead>
  <tbody>

  <% @acknowledges.each do |acknowledge| %>
    <tr>
      <td class="center"><%= check_box_tag "service_ids[]", acknowledge.id %></td>
      <td><%= acknowledge.host_name %></td>
      <td><%= acknowledge.description %></td>
      <%= show_state(acknowledge.state) %>
      <td><%= acknowledge.plugin_output %></td>
      <td class="center"><%= link_to acknowledge.service_id, service_path(acknowledge.service_id) %></td>
    </tr>
  <% end %>
  </tbody>
 </table>
 </div>

<div class="form-group">
  <%= label_tag 'comment', t('ack4nagios.nagios_comment') + ': ' %>
  <%= text_field_tag 'comment', nil, class: 'form-control' %>
</div>

<div class="btn-toolbar">
  <%= back_link %>
  <%= submit_tag("Ticket", class: "btn btn-primary") %>
  <%= submit_tag("Mail", class: "btn btn-primary") %>
  <%= submit_tag("Acknowledge", class: "btn btn-primary") %>
  <%= submit_tag("Test", class: "btn btn-default") %>
</div>
<% end %> <!-- end form -->


