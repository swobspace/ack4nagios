<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.sites') %></h1>

<table id="dataTable" class="table table-bordered table-striped dataTable">
<thead>
  <tr>
    <th><%= t('attributes.name') %></th>
    <th><%= t('attributes.connection_type') %></th>
    <th><%= t('attributes.uri') %></th>
    <% if defined? Ottrick %>
      <th><%= t('attributes.otrs_queue') %></th>
    <% end %>
    <th><%= t('attributes.nagios_service_url') %></th>
    <th></th>
  </tr>
</thead>
<tbody>

<% @sites.each do |site| %>
  <%= content_tag_for(:tr, site) do %>
    <td><%= link_to site.name, acknowledges_path(site: site) %></td>
    <td><%= site.connection_type %></td>
    <td><%= site.uri %></td>
    <% if defined? Ottrick %>
      <td><%= site.otrs_queue %></td>
    <% end %>
    <td><%= site.nagios_service_url %></td>
    <td class="nowrap">
      <%= show_link site %>
      <%= edit_link site %>
      <%= delete_link site %>
    </td>
  <% end %>
<% end %>
</tbody>
</table>

<br />

<%= back_link %>
<%= new_link Site %>
